generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  firstName   String
  lastName    String
  email       String
  images      Image[]

  @@map("users")
}

model Image {
  id          String    @id @default(uuid())
  prompt      String
  url         String
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
@@map("images")
}